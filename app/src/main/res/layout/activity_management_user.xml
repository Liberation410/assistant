<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjgsu.shenyilin.assistant.management_user"
    >


    <EditText
        android:id="@+id/text_previouskey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入修改前的密码"/>
    <EditText
        android:id="@+id/text_newkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入修改后的密码"
        android:layout_below="@id/text_previouskey"/>

    <Button
        android:id="@+id/button_revisekey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认修改"
        android:layout_below="@id/text_newkey"/>

    <include layout="@layout/title" />
</RelativeLayout>
